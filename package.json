{
  "name": "leads-manager",
  "version": "1.1.4",
  "description": "A simple app to manage leads.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --publish=never",
    "build:linux": "electron-builder --linux --publish=never",
    "build:mac": "electron-builder --mac --publish=never",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "author": "Ben Swissa",
  "license": "MIT",
  "build": {
    "appId": "com.leads.follower",
    "productName": "LeadsFollower",
    "files": [
      "**/*",
      "!**/*.map"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "artifactName": "LeadsFollower-${version}.exe"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "artifactName": "LeadsFollower-${version}-arm64.dmg"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "maintainer": "Ben Swissa <your-email@example.com>",
      "description": "A simple app to manage leads.",
      "icon": "build/icon.png",
      "artifactName": "LeadsFollower-${version}.AppImage"
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "dotenv": "^16.4.5",
    "electron-log": "^5.2.2",
    "electron-updater": "^6.3.9",
    "mongodb": "^5.7.0"
  },
  "devDependencies": {
    "electron": "^33.1.0",
    "electron-builder": "^25.1.8"
  }
}
